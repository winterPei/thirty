<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    
    <ImageView
        android:id="@+id/listImageView"
        android:layout_width="160px"
        android:layout_height="120px"
        android:src="@mipmap/ic_launcher"/>
    <TextView 
        android:id="@+id/listViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listImageView"
        android:layout_alignTop="@id/listImageView"
        android:text="aaaaaaaaaaaaaaa"/>
    <TextView 
        android:id="@+id/listViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listImageView"
        android:layout_alignBottom="@id/listImageView"
        android:text="bbbbbbbbbbb"/>
    

</RelativeLayout>
